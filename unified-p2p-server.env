# Unified P2P Server Configuration
# Environment variables for the service

# Network configuration
P2P_LISTEN_PORT=8080
P2P_BIND_ADDRESS=0.0.0.0

# Oracle Cloud specific
OCI_REGION=us-ashburn-1
PUBLIC_IP_AUTO_DETECT=true

# Compilation settings
RUSTC_DRIVER_PATH=/opt/unified-p2p-server/lib/librustc_driver.so
CARGO_PATH=/usr/bin/cargo
MAX_CONCURRENT_COMPILATIONS=4

# Logging
RUST_LOG=info
LOG_LEVEL=info

# Security
ENABLE_SELF_UPDATE=false
ALLOWED_OPERATIONS=compile,analyze,status

# Performance
WORKER_THREADS=4
MAX_MEMORY_MB=2048
