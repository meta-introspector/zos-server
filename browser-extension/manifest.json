// ZOS Browser Extension - Advanced UI Helpers
// Browser plugin for interacting with ZOS network

// manifest.json
{
  "manifest_version": 3,
  "name": "ZOS Network Helper",
  "version": "1.0.0",
  "description": "Advanced UI helpers for Zero Ontology System",
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "nativeMessaging"
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "https://*.zos-network.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ZOS Network"
  },
  "web_accessible_resources": [{
    "resources": ["zos-widget.js"],
    "matches": ["<all_urls>"]
  }]
}
